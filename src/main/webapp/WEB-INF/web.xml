<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

	 <welcome-file-list>
		 <welcome-file>index.jsp</welcome-file>
	 </welcome-file-list>
	 
    <servlet>
        <servlet-name>BankServlet</servlet-name>
        <servlet-class>com.zbank.servlet.BankServlet</servlet-class>
    </servlet>
    
  
  <servlet-mapping>
        <servlet-name>BankServlet</servlet-name>
        <url-pattern>/service/*</url-pattern>
    </servlet-mapping>
    
      <servlet>
   		 <servlet-name>ApiServlet</servlet-name>
    	 <servlet-class>com.zbank.servlet.ApiServlet</servlet-class>
    </servlet>
    
    
    <servlet-mapping>
    	
    	<servlet-name>ApiServlet</servlet-name>
    	<url-pattern>/api/*</url-pattern>
    </servlet-mapping>
    
    
  <filter>
    <filter-name>MyFilter</filter-name>
    <filter-class>com.zbank.servlet.ServletFilter</filter-class> 
  </filter>
    
   <filter-mapping>
    <filter-name>MyFilter</filter-name>
    <url-pattern>/service/*</url-pattern>
   </filter-mapping>
    
	
</web-app>
